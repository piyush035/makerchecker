<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
       	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       	http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd">

	<!-- Spring Data Access Exception Translator Defintion -->

	<bean id="jdbcExceptionTranslator"
		class="org.springframework.jdbc.support.SQLErrorCodeSQLExceptionTranslator">
		<property name="dataSource">
			<ref bean="sqlDataSource" />
		</property>
	</bean>
	<bean id="hibernateTemplate" class="org.springframework.orm.hibernate3.HibernateTemplate">
		<property name="sessionFactory">
			<ref bean="sqlSessionFactory" />
		</property>
		<property name="jdbcExceptionTranslator">
			<ref bean="jdbcExceptionTranslator" />
		</property>
	</bean>
	<bean id="hibernateDaoSupport" abstract="true"
		class="org.springframework.orm.hibernate3.support.HibernateDaoSupport">
	</bean>

	<bean id="abstractDefaultDao" abstract="true" parent="hibernateDaoSupport"
		class="com.mshop.base.common.persistance.dao.impl.AbstractDefaultDao">
		<property name="hibernateTemplate" ref="hibernateTemplate" />
	</bean>

	<bean id="sqlSessionFactory"
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource" ref="sqlDataSource" />
		<property name="annotatedClasses">
			<list>
				<value>com.hotel.base.common.domain.user.bean.UserLoginBean</value>
				<value>com.hotel.base.common.domain.user.bean.UserInformationBean
				</value>
				<!-- <value>com.hotel.base.common.domain.address.bean.AddressBean</value> 
					<value>com.hotel.base.common.domain.city.bean.CityBean</value> -->
				<value>com.hotel.base.common.domain.country.bean.CountryBean</value>
				<!--<value>com.hotel.base.common.domain.postalcodes.bean.PostalCodesBean</value> -->
				<value>com.hotel.base.common.domain.roles.bean.RolesBean</value>
				<value>com.hotel.base.common.domain.states.bean.StatesBean</value>
				<value>com.hotel.base.common.domain.alert.bean.AlertBean</value>
				<value>com.hotel.base.common.domain.roomtype.bean.RoomTypeBean</value>
				<value>com.hotel.base.common.domain.room.bean.RoomBean</value>
				<!--<value>com.hotel.base.common.domain.addresstype.bean.AddressTypeBean</value> -->
			</list>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect"> org.hibernate.dialect.HSQLDialect</prop>
				<prop key="hibernate.show_sql">true</prop>
			</props>
		</property>
	</bean>
</beans>